<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/listSectionHeaderContainerView"
        layout="@layout/list_item_default_section_header_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/dueIndicator"
            android:layout_width="4dp"
            android:background="@color/branding_red"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCustomerPic"
                android:layout_width="@dimen/customer_list_thumbnail_size"
                android:layout_height="@dimen/customer_list_thumbnail_size"
                android:background="@color/gray_light" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/content_margin"
                android:paddingRight="@dimen/content_margin">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Phi Van Ngoc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/list_item" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:paddingTop="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/brokermate_ic_clock_red" />

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="01/01/2015 19:30"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/list_item" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:paddingTop="0dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/brokermate_ic_location_red" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Cafe Chaos, 15 Thai Ha, Ha Noi"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/list_item" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgReminder"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/brokermate_ic_alarm_red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>