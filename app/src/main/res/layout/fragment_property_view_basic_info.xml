<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupBasicInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/listSeparatorTextView"
        android:text="@string/basic_info" />

    <LinearLayout
        android:id="@+id/groupLocality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCode"
            style="@style/itemViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/itemViewSubLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/code" />
    </LinearLayout>

    <!-- Status -->
    <LinearLayout
        android:id="@+id/groupStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStatus"
            style="@style/itemViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/itemViewSubLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status" />
    </LinearLayout>

    <!-- Type -->
    <LinearLayout
        android:id="@+id/groupType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtType"
            style="@style/itemViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/itemViewSubLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type" />
    </LinearLayout>

    <!-- Address -->
    <LinearLayout
        android:id="@+id/groupAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAddress"
            style="@style/itemViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/itemViewSubLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address" />

        <fragment
            android:id="@+id/mapFragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
</LinearLayout>